{% extends 'eniQCMBundle::layout.html.twig' %}

{% block title %}
	Liste des Inscription
{% endblock %}

{% block content %}

	<h2>Liste des Inscriptions</h2>

	<a class="btn btn-success" href="{{ path('inscription_create') }}">Ajouter Inscription</a>

	<div class="table-responsive listeInscription">
	    <table class="inscription table table-hover table-striped">
	        <thead>
	            <tr>
	                <th class="inscription" data-attribute="id"> Id </th>
	                <th class="inscription" data-attribute="enonce"> Stagiaires </th>
	                <th class="inscription" data-attribute="type"> Tests </th>
	                <th class="inscription" data-attribute="update"> Modifier/Supprimer </th>
	            </tr>
	        </thead>
	        <tbody id="inscription-list">
	        	{% for inscription in listeInscriptions %}
	        		<tr>
			        	<td class="id inscription">{{ inscription.getId() }}</td>
			        	<td class="user inscription">{{ inscription.getUtilisateur() }}</td>
			        	<td class="test inscription">{{ inscription.getTest().getNom() }}</td>
			        	<td class="update inscription_create">
			        		<span class="update-inscription glyphicon glyphicon-refresh"></span>
			        		<span class="update-inscription glyphicon glyphicon-trash"></span>
			    	</tr>
			    {% endfor %}
	        </tbody>
	    </table>
	</div>

{% endblock %}