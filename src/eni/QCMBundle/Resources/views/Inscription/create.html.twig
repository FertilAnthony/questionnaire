{% extends 'eniQCMBundle::layout.html.twig' %}

{% block title %}
Administration des inscriptions
{% endblock %}

{% block js %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('js/lib/bootstrap-datepicker.js') }}"></script>
{% endblock %}

{% block content %}
	<h2>Inscriptions Ã  un test</h2> 
	<form id="createInscription" action="{{ path('inscription_create') }}" method="post" role='form' class='form-horizontal'>
		{{form_widget(form) }}
		<button type="button" class="btn btn-success addPromo" title="Ajouter une promotion"><span class="glyphicon glyphicon-forward"></span></button>
		<button type="button" class="btn btn-danger removePromo" title="Retirer une promotion"><span class="glyphicon glyphicon-backward"></span></button>
		<button type="button" class="btn btn-success addUser" title="Ajouter un stagiaire"><span class="glyphicon glyphicon-forward"></span></button>
		<button type="button" class="btn btn-danger removeUser" title="Retirer un stagiaire"><span class="glyphicon glyphicon-backward"></span></button>
		<input type="submit" class="btn btn-primary" value="Valider">
	</form>

	<script type="text/javascript">
	$(function() {
		$('.datepicker').datepicker({
			format: 'dd/mm/yyyy',
			language: 'fr'
		});

		// Surcharge css formulaire
		$('#createInscription .promotions').parent().css({
			"width": "40%",
			"float": "none",
			"margin-top": "35px"
		});
		$('#createInscription .stagiaires').parent().css({
			"width": "40%",
			"float": "none",
			"margin-top": "35px"
		});
		$('#createInscription .inscrits').parent().css({
			"width": "40%",
			"float": "right",
			'margin-top': '-460px'
		});
		$("label[for='.inscrits']").css({
			"float": "none",
			"top": "-470px",
			"left": "580px"
		});
	});
	</script>
{% endblock %}